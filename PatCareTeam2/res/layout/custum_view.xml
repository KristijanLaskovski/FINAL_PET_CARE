<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	
	android:descendantFocusability="beforeDescendants">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
	
		android:background="@drawable/card_background_selector"
		android:descendantFocusability="afterDescendants">

	    <RelativeLayout 
	        android:layout_width="match_parent"
		android:layout_height="wrap_content" >
	        
	        <ImageView
        android:id="@+id/ivkikolaskovski"
          android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
         android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
     
        android:src="@drawable/kikko" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivkikolaskovski"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/ivkikolaskovski"
        android:text="@string/nameTV"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#222" />

    <TextView
        android:id="@+id/TVComment"
      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivkikolaskovski"
        android:layout_below="@+id/ivkikolaskovski"
     
        android:text="@string/tvComment"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#222"/>

    <TextView
        android:id="@+id/etLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_alignBottom="@+id/tvName"
        android:layout_toRightOf="@+id/tvName"
        android:paddingLeft="5dp"
        android:text="@string/lname"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#222" />

    
        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="190dp"
	        android:src="@drawable/cutetamplate"
	         android:layout_below="@+id/TVComment"
	         />

        <TextView
            android:id="@+id/TVtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_below="@+id/tvName"
            android:text="@string/timeTV"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#222" />
    
        
         <ImageButton
	        android:id="@+id/imageButton1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/locationbtnadd"
	        android:background="@null"
	        android:layout_below="@+id/imageView1"
	        android:layout_marginLeft="5dp"
	        
	         />

         <ImageButton
             android:id="@+id/imageButton2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/imageView1"
             
             android:layout_marginLeft="270dp"
             
             android:background="@null"
             android:src="@drawable/calluser" />
        
	       </RelativeLayout>

	   
	</LinearLayout>
</FrameLayout>